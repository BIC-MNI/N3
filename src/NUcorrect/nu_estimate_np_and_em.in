sub field_CV
{
   my ($result, $mean, $stddev);

   (-r $_[0]) || die("field_CV. Can't read file: $_[0]\n");
   Spawn(['volume_stats', '-quiet', '-stddev', '-mean',
                              '-mask', $_[1], $_[0]], stdout => \$result);
   ($mean, $stddev) = split("\n",$result);
